<Window x:Class="Gasware.BillingDate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gasware"
        mc:Ignorable="d" Background="Aquamarine"
        Height="120" Width="300" Top="150" Left="500"
        Title="Billing Date Filter">
    <Grid x:Name="billngDateGrid" Height="120" Width="300">
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Select Billing Date : " VerticalAlignment="Top" Margin="45,15,0,0" Grid.ColumnSpan="2"/>
        <DatePicker Name="dpInputBillingDate" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,10,0,0" Grid.Column="1"/>
        
        <Button Name="btnOk" Content="OK" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="50,50,0,0" Click="OkButtonClicked" Grid.ColumnSpan="2"/>
        <Label Name="lblButtonClicked" Visibility="Hidden" Grid.ColumnSpan="2" />
        <Button Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="150,50,0,0" Grid.Column="1" Click="btnCancel_Click"/>
    </Grid>
</Window>
